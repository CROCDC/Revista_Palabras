<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerNavigationView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewFotoDePerfil"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:src="@drawable/acountnegro" />

    <TextView
        android:id="@+id/textViewNombreDeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFotoDePerfil"
        android:layout_marginLeft="20dp"
        android:text="@string/invitado"
        android:textColor="@color/negro"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/buttonActionsAcounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@color/negro"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/buttonActionsAcounts"
        android:src="@drawable/lineagris" />


</RelativeLayout>