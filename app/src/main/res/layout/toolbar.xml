<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPrincipal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/negro">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewMenuAmburguesa_toolbar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/menuhamburguesa" />

            <TextView
                android:id="@+id/textviewTituloRevistaPalabras_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="80dp"
                android:text="@string/app_name"
                android:textColor="@color/blanco"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageViewButtonSearch_toolbar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/textviewTituloRevistaPalabras_toolbar"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/editTextBusqueda_toolbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@id/imageViewButtonSearch_toolbar"
                android:hint="@string/busqueda_la_en_revista_palabras"
                android:inputType="text"
                android:textColor="@color/blanco"
                android:visibility="invisible">

                <requestFocus />

            </EditText>


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>