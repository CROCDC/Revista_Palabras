<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutContenedor_fragmentultimasnoticas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".View.Fragments.FragmentUltimasNoticias">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewNotas_fragmentdentrodelmainactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayoutContenedorredessociales_fragmentultimasnoticias"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/buttonImageViewTwitter_footer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/twitter" />


        <ImageView
            android:id="@+id/buttonImageViewFacebook_footer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/facebook" />


        <ImageView
            android:id="@+id/buttonImageViewInstagram_footer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/instagram" />


    </LinearLayout>


</LinearLayout>