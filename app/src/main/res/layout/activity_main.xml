<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorActivityMain_activitymain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ar.tcr.revistapalabras.View.Activitys.MainActivity">


    <include layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/linearLayoutContenedorDeFragments_activitymain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewContenedorTabLayout_activitymain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="15dp"
            app:cardUseCompatPadding="false">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayoutPrincipal_activitymain"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </android.support.design.widget.TabLayout>


        </android.support.v7.widget.CardView>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerPrincipal_activitymain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigationViewCategorias_activitymain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_navigation_view"
        app:itemBackground="@android:color/white"
        app:menu="@menu/navigation_view_categorias" />


</android.support.v4.widget.DrawerLayout>
